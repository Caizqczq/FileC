@model ProfileViewModel
@{
    ViewData["Title"] = "个人资料";
}

<div class="container">
    <h1>我的个人资料</h1>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">用户信息</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">电子邮箱</label>
                        <p class="form-control-static">@Model.Email</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">名字</label>
                                <p class="form-control-static">@Model.FirstName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">姓氏</label>
                                <p class="form-control-static">@Model.LastName</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">存储使用情况</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">已使用存储空间</label>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: @Model.StorageUsagePercentage%;" 
                                 aria-valuenow="@Model.StorageUsagePercentage" aria-valuemin="0" aria-valuemax="100">
                                @Model.StorageUsagePercentage%
                            </div>
                        </div>
                        <small class="text-muted">@Model.StorageUsedMB MB / @Model.StorageLimitMB MB</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
